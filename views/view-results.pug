extend layout
block head
    link(rel='stylesheet', href='/public/css/view-results.css')
block content
    h1= poll.question
    p.author Created by #{poll.creator.displayName}
    div= poll
    .row
        .col-sm-3
        .col-sm-6
            ul
                each answer in poll.answers
                    li= answer + ': ' + poll.resultsObject[answer]
        .col-sm-3
